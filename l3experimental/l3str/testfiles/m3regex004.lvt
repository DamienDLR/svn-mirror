  {
    \regex_extract_all:nnN {#1} {#2} \l_foo_seq
    \seq_show:N \l_foo_seq
  }
\TEST{letter~case}{
  \test:nn { a(?i)b|c } { c C ab aB Ab AB }
  \test:nn { a(?i)b(?:c(?-i)d|e)*f } { aBCdeF abCdCdeF abcDf abEf }
}

