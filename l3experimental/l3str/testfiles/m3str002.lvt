\str_set:Nx \l_utf_viii_str { \iow_char:N \^^c2 \iow_char:N \^^83 }
\str_set:Nx \l_native_str { \iow_char:N \^^83 }

\TEST{str_set_from_UTF_viii:Nn}{
  \exp_args:NNo \str_set_from_UTF_viii:Nn \l_tmpa_str { \l_utf_viii_str }
  \str_if_eq:NNTF \l_tmpa_str \l_native_str { \TRUE } { \ERROR }
}

\TEST{str_to_UTF_viii:n}{
  \str_if_eq:xxTF
    { \exp_args:No \str_to_UTF_viii:n { \l_native_str } }
    { \l_utf_viii_str }
    { \TRUE } { \ERROR }
}

