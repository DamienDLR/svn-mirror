% \begin{macro}[pTF]{\fontface_if_null:N}
% \UnitTested
%    \begin{macrocode}
\prg_new_conditional:Nnn \fontface_if_null:N { p , TF , T , F }
  {
    \if_meaning:w #1 \tex_nullfont:D
      \prg_return_true:
    \else:
      \prg_return_false:
    \fi:
  }
