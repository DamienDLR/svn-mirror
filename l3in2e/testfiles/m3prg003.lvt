  \bool_p:n { \c_true  && \c_true  && \c_false }  \NEWLINE
  \bool_p:n { \c_false && \c_true  && \c_false }  \NEWLINE
  \bool_p:n { \c_true  && \c_false && \c_false }  \NEWLINE
  \bool_p:n { \c_false && \c_false && \c_false }          
}

