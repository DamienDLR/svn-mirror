\TESTEXP{Basics}{                                  
  \bool_p:n { \c_true  }              \NEWLINE
  \bool_p:n { \c_false }              \NEWLINE     
  \bool_p:n { \c_true  || \c_true  }  \NEWLINE
  \bool_p:n { \c_true  || \c_false }  \NEWLINE
  \bool_p:n { \c_false || \c_true  }  \NEWLINE
  \bool_p:n { \c_false || \c_false }  \NEWLINE
  \bool_p:n { \c_true  && \c_true  }  \NEWLINE
  \bool_p:n { \c_true  && \c_false }  \NEWLINE
  \bool_p:n { \c_false && \c_true  }  \NEWLINE
  \bool_p:n { \c_false && \c_false }          
}

\TESTEXP{Triplet~combinations~I}{                              
  \bool_p:n { \c_true  && \c_true  && \c_true  }  \NEWLINE
