\TESTEXP{Lazy~evaluation}{
  \bool_p:n{
    \int_compare_p:nNn 1=1 &&
    \bool_p:n {
      \int_compare_p:nNn 2=3 ||
      \int_compare_p:nNn 4=4 ||
      \int_compare_p:nNn 1=\ERROR % is skipped
    } &&
    \int_compare_p:nNn 2=2 
  }
}

\TESTEXP{XOR}{                   
  \bool_xor_p:nn { \c_true  }{ \c_true  }  \NEWLINE
  \bool_xor_p:nn { \c_true  }{ \c_false }  \NEWLINE
  \bool_xor_p:nn { \c_false }{ \c_true  }  \NEWLINE
  \bool_xor_p:nn { \c_false }{ \c_false }          
}

