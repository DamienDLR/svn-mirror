%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{New~bool}{
  \bool_new:N \mybool  \bool_new:c {mybool2}
  \cs_show:N \mybool   \cs_show:c {mybool2}
}

\bool_new:N \myboola
\bool_new:N \myboolb
\TEST{Not~new~bool}{
  \TYPE{NOT~OKAY:}
  \bool_new:N \myboola
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% It doesn't seem like these would ever break

\TEST{Set~true/false}{
  \bool_set_true:N \myboola
  \bool_set_true:N \myboolb
  \bool_if:NTF \myboola {\TRUE}{\FALSE}
  \group_begin:
    \bool_set_false:N \myboola
    \bool_if:NTF \myboola {\TRUE}{\FALSE}
    \bool_gset_false:N \myboolb
  \group_end:
  \TYPE{A:}\bool_if:NTF \myboola {\TRUE}{\FALSE}
  \TYPE{B:}\bool_if:NTF \myboolb {\TRUE}{\FALSE}
  \SEPARATOR
  \bool_set_eq:NN \myboola \myboolb
  \TYPE{A:}\bool_if:NTF \myboola {\TRUE}{\FALSE}
  \TYPE{B:}\bool_if:NTF \myboolb {\TRUE}{\FALSE}
  \SEPARATOR
  \bool_set_true:N \myboola
  \group_begin:
    \bool_gset_eq:NN \myboolb \myboola
  \group_end:
  \TYPE{A:}\bool_if:NTF \myboola {\TRUE}{\FALSE}
  \TYPE{B:}\bool_if:NTF \myboolb {\TRUE}{\FALSE}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% What can possibly go wrong here?

\bool_set_true:N  \myboola
\bool_set_false:N \myboolb

\TESTEXP{Boolean~conditionals}{
   \bool_if:NTF \c_true  {\TRUE}{\FALSE}
   \NEWLINE              
   \bool_if:NTF \c_false {\TRUE}{\FALSE}
   \NEWLINE              
   \bool_if:NTF \myboola {\TRUE}{\FALSE}
   \NEWLINE              
   \bool_if:NTF \myboolb {\TRUE}{\FALSE}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\OMIT
\int_new:N \myint
\TIMO

\TEST{More~while~loops}{

  \int_zero:N \myint 
  \bool_set_true:N \myboola
  \bool_whiledo:NT \myboola
  {
    \TYPE{ \int_use:N \myint }
    \int_incr:N \myint
    \int_compare:nNnT \myint >  5 { \bool_set_false:N \myboola }
  }
  \SEPARATOR
  
  \int_zero:N \myint 
  \bool_set_true:N \myboola
  \bool_dowhile:NT  \myboola
  {
    \TYPE{ \int_use:N \myint }
    \int_incr:N \myint
    \int_compare:nNnT \myint > 5 { \bool_set_false:N \myboola }
  }
  \SEPARATOR
  
  \NO
  \bool_set_false:N \myboola
  \bool_whiledo:NT \myboola{ \TYPE{ \int_use:N \myint } }
  \SEPARATOR
  \bool_dowhile:NT \myboola{ \TYPE{ \int_use:N \myint } }
}

\OMIT
\bool_new:N \myboold
\bool_set_true:N \myboola
\bool_set_true:N \myboolb
\bool_set_false:N \myboolc
\bool_set_false:N \myboold
\TIMO

\TESTEXP{Double~if}{
  \bool_double_if:NNnnnn \myboola \myboolb {\YES}{\NO}{\NO}{\NO}\NEWLINE
  \bool_double_if:NNnnnn \myboola \myboolc {\NO}{\YES}{\NO}{\NO}\NEWLINE
  \bool_double_if:NNnnnn \myboolc \myboolb {\NO}{\NO}{\YES}{\NO}\NEWLINE
  \bool_double_if:NNnnnn \myboolc \myboold {\NO}{\NO}{\NO}{\YES}
}






