% tmp measure ....!

\ifnum \pdftexversion > 120 \relax % those tests don't work with old pdftex


\tl_set:Nn \l_tmpa_tlp {a{bb}cdzyx\ERROR\par ##}
\TEST{if_in~(T/T/T/F)}{
  \tl_if_in:NnTF \l_tmpa_tlp {cdz}    {\TRUE} {\FALSE}
  \tl_if_in:NnTF \l_tmpa_tlp {\ERROR} {\TRUE} {\FALSE}
  \tl_if_in:NnTF \l_tmpa_tlp {\par}   {\TRUE} {\FALSE}
  \tl_if_in:NnTF \l_tmpa_tlp {abb}    {\TRUE} {\FALSE}
  \SEPARATOR
  \tl_if_in:NnT \l_tmpa_tlp {cdz}    {\TRUE} 
  \tl_if_in:NnT \l_tmpa_tlp {\ERROR} {\TRUE} 
  \tl_if_in:NnT \l_tmpa_tlp {\par}   {\TRUE} 
  \SEPARATOR
  \tl_if_in:NnF \l_tmpa_tlp {abb}    {\FALSE}
  \SEPARATOR
  \SEPARATOR
  \tl_if_in:cnTF {l_tmpa_tlp} {cdz}    {\TRUE} {\FALSE}
  \tl_if_in:cnTF {l_tmpa_tlp} {\ERROR} {\TRUE} {\FALSE}
  \tl_if_in:cnTF {l_tmpa_tlp} {\par}   {\TRUE} {\FALSE}
  \tl_if_in:cnTF {l_tmpa_tlp} {abb}    {\TRUE} {\FALSE}
  \SEPARATOR
  \tl_if_in:cnT {l_tmpa_tlp }{cdz}    {\TRUE} 
  \tl_if_in:cnT {l_tmpa_tlp }{\ERROR} {\TRUE} 
  \tl_if_in:cnT {l_tmpa_tlp }{\par}   {\TRUE} 
  \SEPARATOR  
  \tl_if_in:cnF {l_tmpa_tlp }{abb}    {\FALSE}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\tl_set:Nn \l_tmpa_tlp {a{bb}cdzyx\ERROR\par ## cdzyx}

\TEST{replace_in}{
  \tl_replace_in:Nnn \l_tmpa_tlp {cdz} {cc~dd~zz}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_replace_in:cnn {l_tmpa_tlp} {yx} {yy~xx}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
}

\TEST{greplace_in}{
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_in:Nnn \l_tmpa_tlp {cdz} {cc~dd~zz}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_in:cnn {l_tmpa_tlp} {yx} {yy~xx}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
}

\TEST{replace_all_in}{
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_replace_all_in:Nnn \l_tmpa_tlp {z} {{Z}}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_replace_all_in:cnn {l_tmpa_tlp} {y} {{Y}}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
}

\TEST{greplace_all_in}{
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_all_in:Nnn \l_tmpa_tlp {z} {{Z}}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_all_in:cnn {l_tmpa_tlp} {y} {{Y}}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
}

\TEST{greplace_all_in~#~and~par}{
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_all_in:Nnn \l_tmpa_tlp {\ERROR} {=/err=}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
  \tl_greplace_all_in:Nnn \l_tmpa_tlp {\par} {~/par\par/par~}
  \TYPE { \tl_to_str:N \l_tmpa_tlp }
}
\fi
