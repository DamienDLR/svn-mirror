\OMIT
\int_new:N \cntr
\TIMO

\TEST{While~loops}{
  \int_set:Nn \cntr {0}
  \bool_while_do:nn {
    \intexpr_compare_p:nNn \cntr < 5 
  } {
    \int_incr:N \cntr 
    \TYPE{ \int_use:N \cntr }
  }
  \SEPARATOR
  \int_set:Nn \cntr {0}
  \bool_do_while:nn {
    \intexpr_compare_p:nNn \cntr < 5 
  } {
    \int_incr:N \cntr 
    \TYPE{ \int_use:N \cntr }
  }
}

\TEST{While~loops~false~to~begin}{
  \int_set:Nn \cntr {5}
  \TYPE{~}
  \bool_while_do:nn {
    \intexpr_compare_p:nNn \cntr < 5 
  } {
    \int_incr:N \cntr 
    \TYPE{ \int_use:N \cntr }
  }
  \SEPARATOR
  \int_set:Nn \cntr {5}
  \bool_do_while:nn {
    \intexpr_compare_p:nNn \cntr < 5 
  } {
    \int_incr:N \cntr 
    \TYPE{ \int_use:N \cntr }
  }
}

