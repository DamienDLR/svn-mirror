    {y}     {\NO} 
    {yz}    {\YES}
    {\ERROR}{\ERROR} }
  { \NO }
  \NEWLINE
  \prg_case_str:nnn { yz } 
  { {x}     {\NO} 
    {yz}    {\YES} 
    {xyz}   {\NO}
    {\ERROR}{\ERROR} }
  { \NO }
