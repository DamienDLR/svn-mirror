\TESTEXP{Case~statements~(int)}{
  \prg_case_int:nnn { -1+1 } 
  {  {-1} {\NO}
    {3-3} {\YES}   }
  { \NO }  
  \NEWLINE  
  \prg_case_int:nnn { 0 } 
  {  {0}      {\YES}
     {\ERROR} {\ERROR}   }
  { \NO }  
  \NEWLINE
  \prg_case_int:nnn { 7-2 } 
  { {-1+3}{\NO} }
  { \YES }
}

