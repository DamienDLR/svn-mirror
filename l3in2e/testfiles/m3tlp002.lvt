\TEST{map_variable}{
  \tl_map_variable:NNn \l_tmpa_tlp \ii {
    \TYPE{[\ii]~}
  }
}

\tl_set:Nn \l_tmpa_tlp {a{bb}cdzyx\ERROR}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{map_break~inline/variable}{
  \tl_map_inline:Nn \l_tmpa_tlp {
    \tlist_if_eq:nnTF {#1} {z} {
      \tl_map_break:w
    }{
      \TYPE{[#1]}    
    }
  }  
  \SEPARATOR
  \tl_map_variable:NNn \l_tmpa_tlp \ii {
    \tlist_if_eq:noTF {z} {\ii} {
      \tl_map_break:w
    }{
      \TYPE{[\ii]}    
    }
  }
}

\cs_set:Npn \tl_tmp:n #1 {    
  \tlist_if_eq:nnTF {#1} {z} {
    \tl_map_break:w
  }{
    \TYPE{[#1]}    
  }
}

