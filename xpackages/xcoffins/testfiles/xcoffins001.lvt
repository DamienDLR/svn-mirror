%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Equating~ coffins}{
   \sbox \aaa {A}
   \sbox \zzz {Z}
   \coffin_show_structure:N \zzz
   \box_show:N \zzz
   \coffin_set_pole_coordinates:Nnn \aaa {test1} {{0pt}{1pt-1pt}{1pt}{0pt}}
   \coffin_set_pole_coordinates:Nnn \aaa {test2} {{2pt - \wd #1}{0pt}{0pt}{1pt}}
   \coffin_set_eq:NN \zzz \aaa
   \coffin_show_structure:N \zzz
% \zzz = A \aaa = A
   \box_show:N \zzz
   \box_show:N \aaa
   \coffin_set_eq_clear:NN \xxx \zzz
   \coffin_show_structure:N \xxx
% now \zzz has the default poles again
   \coffin_show_structure:N \zzz
% \xxx = A \zzz = void
   \box_show:N \xxx
   \box_show:N \zzz
}

