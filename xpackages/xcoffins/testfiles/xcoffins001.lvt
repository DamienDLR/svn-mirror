\TEST{Setting~ coffin~ poles~ (2)}{
  \coffin_set_pole_coordinates:Nnn \aaa  {test1} {{1pt}{0pt}{0pt}{1pt}}
% now overwrites, ok?
  \coffin_set_pole_coordinates:Nnn \aaa  {test1} {{0pt}{2pt}{1pt}{0pt}}
  \coffin_set_pole_safe:Nnnn       \aaa   {v} {test2}  {5pt}
% now overwrites, ok?
  \coffin_set_pole_safe:Nnnn       \aaa   {h} {test2}  {-5pt} 
  \coffin_adjust_pole_safe:Nnnn    \aaa   {v} {hc}     {-1pt}
  \coffin_show_structure:N \aaa
% works
  \box_new:N \yyy
  \coffin_set_pole_safe:Nnnn       \yyy {h} {onbox1} {5pt}
  \coffin_show_structure:N \yyy
% generates missing pole error
  \box_new:N \zzz
  \coffin_adjust_pole_safe:Nnnn    \zzz {h} {onbox2} {-5pt}
  \coffin_show_structure:N \zzz
}


