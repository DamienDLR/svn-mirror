    \ifrun@with@floats
      \update@best@trial
%<*progress>
      \progress@inform@later
%</progress>
    \else
      \run@with@floatstrue
    \fi
  \fi
%<*trace>
  \@tracepop{evaluate@results@of@trial}
%</trace>
 }
