%    \end{macrocode}
%    
%    \begin{macrocode}
  \@tempcnta\trial@flush@seen@num
  \@tempcntb\z@
  \loop
  \ifnum \@tempcntb < \count@

    \advance\@tempcnta\@ne
    \advance\@tempcntb\@ne
%<*trace>
    \tr@ce{flush@fuzziness@\the\@tempcntb\space
           =~ \expandafter \noexpand
