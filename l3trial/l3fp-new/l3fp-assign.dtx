% \subsection{Operations on new floating point numbers}
%
% \begin{macro}{\fp_assign_add:Nn}
%    \begin{macrocode}
\cs_new_protected:Npn \fp_assign_add:Nn #1 #2
  {
    \tl_set:Nf #1
      {
        \exp_after:wN \exp_after:wN
        \exp_after:wN \fp_add:ww
        \exp_after:wN #1
        \tex_romannumeral:D -`0 \fp_convert_from_str:n {#2}
      }
  }
\cs_new_protected:Npn \fp_assign_sub:Nn #1 #2
  {
    \tl_set:Nf #1
      {
        \exp_after:wN \exp_after:wN
        \exp_after:wN \fp_sub:ww
        \exp_after:wN #1
        \tex_romannumeral:D -`0 \fp_convert_from_str:n {#2}
      }
  }
%    \end{macrocode}
% \end{macro}
%
% \subsection{Operations on old floating point numbers}
%
% \begin{macro}{\fp_old_generic:NNn}
%   Just for tests\ldots{}
%    \begin{macrocode}
\cs_new_protected:Npn \fp_old_generic:NNNn #1 #2 #3 #4
  {
    #1 #3
      {
        \fp_convert_new_to_old:f
          {
            #2
              { \fp_convert_old_to_new:N #3 }
              { \fp_convert_from_str:n {#4} }
          }
      }
  }
%    \end{macrocode}
% \end{macro}
